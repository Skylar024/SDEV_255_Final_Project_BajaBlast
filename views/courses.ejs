                    <% if (courseList.length > 0) { %>
                        <% courseList.forEach(courseList => { %>

                            <h3 class="title"><%= courseList.title %></h3>
                            <p class="snippet"><%= courseList.snippet %></p>
                            <p class="snippet2"><%= courseList.snippet2 %></p>
                            <p class="snippet3"><%= courseList.snippet3 %></p>

                        <% }) %>
                    <% } else { %>
                        <p>There are no Courses Listed...</p>
                    <% } %>
                </div>

<html lang="en">

    <%- include('./partials/head.ejs') %>

    <body>

        <%- include('./partials/nav.ejs') %>

        <!--Courses Description-->
        <section class="">
            <div class="container">
                <p>
                    Description of what the user will find below
                </p>
                <div class="courses-list">
